<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MoviesActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        >
        <ImageView
            android:layout_width="31dp"
            android:layout_height="37dp"
            android:layout_marginLeft="13dp"
            android:src="@drawable/img_14"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/txt_rectenly"
                android:fontFamily="@font/poppins"
                android:padding="10dp"
                android:text="Rentenly Watched"
                android:textColor="#FFFAFA"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/reggae_one"
            android:text="Welcome,"
            android:textColor="#FFFFFF"
            android:textSize="21sp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/playball"
            android:text=" Arpan"
            android:textColor="#FFFFFF"
            android:textSize="21sp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
          >
            <ImageView
                android:id="@+id/img_harrypotter"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_17"
                android:layout_marginLeft="-3dp"
                >
            </ImageView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/txt_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="7dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:text="10+"/>
            <TextView
                android:id="@+id/titleHarryPorterTv"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/txt_child"
                android:text="Harry Porter"
                android:textSize="13sp"
                android:textColor="#FF0000"
                android:paddingLeft="8dp"
                android:fontFamily="@font/reggae_one"/>
            <TextView
                android:layout_width="106dp"
                android:layout_height="17dp"
                android:layout_gravity="bottom"
                android:textSize="6sp"
                android:text="and the cursed child"
                android:textColor="#FFFAFA"
                android:paddingLeft="8dp"
                android:paddingTop="6dp"
                android:fontFamily="@font/poppins_medium"
                />
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="end|bottom"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/img_18"
                />

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="82dp"
            android:layout_height="31dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Popular"
            android:textColor="#DBDBDB"
            android:textSize="17sp" />
        <TextView
            android:layout_weight="1"
            android:gravity="end"
            android:layout_width="82dp"
            android:layout_height="31dp"
            android:layout_marginLeft="20dp"

            android:fontFamily="@font/poppins_semibold"
            android:text="See all >"
            android:textColor="#B3B3B3"
            android:textSize="12sp"
            android:paddingRight="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="20dp"
            >
            <ImageView
                android:id="@+id/detailImg"
                android:layout_width="116dp"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_19" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="20dp"
            >
            <ImageView
                android:layout_width="116dp"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_20" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="20dp"
            >
            <ImageView
                android:layout_width="116dp"
                android:layout_height="170dp"
                android:src="@drawable/img_21"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="119dp"
            android:layout_height="31dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Todays pick"
            android:textColor="#DBDBDB"
            android:textSize="17sp" />
        <TextView
            android:layout_weight="1"
            android:gravity="end"
            android:layout_width="82dp"
            android:layout_height="31dp"
            android:layout_marginLeft="20dp"

            android:fontFamily="@font/poppins_semibold"
            android:text="See all >"
            android:textColor="#B3B3B3"
            android:textSize="12sp"
            android:paddingRight="30dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="20dp"
                >
                <ImageView
                    android:layout_width="116dp"
                    android:layout_height="170dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_23" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="20dp"
                >
                <ImageView
                    android:layout_width="116dp"
                    android:layout_height="170dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_24" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="20dp"
                >
                <ImageView
                    android:layout_width="116dp"
                    android:layout_height="170dp"
                    android:src="@drawable/img_25"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>




        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <ImageView
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:src="@drawable/img_26"
                android:scaleType="centerCrop"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:paddingLeft="100dp"
                    android:layout_weight="1"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:src="@drawable/img_27"
                    android:layout_centerHorizontal="true"
                    />
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:src="@drawable/img_29"
                    android:layout_centerHorizontal="true"
                    />
                <ImageView
                    android:paddingRight="100dp"
                    android:layout_weight="1"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:src="@drawable/img_30"
                    android:layout_centerHorizontal="true"
                    />
            </LinearLayout>
        </RelativeLayout>
        

    </RelativeLayout>

</LinearLayout>